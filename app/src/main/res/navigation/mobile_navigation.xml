<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.dicodingeventapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_eventDetailFragment"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.example.dicodingeventapp.ui.upcoming.EventUpcomingFragment"
        android:label="@string/title_upcoming"
        tools:layout="@layout/fragment_event_upcoming">
        <action
            android:id="@+id/action_navigation_upcoming_to_eventDetailFragment"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_finished"
        android:name="com.example.dicodingeventapp.ui.finish.EventFinishedFragment"
        android:label="@string/title_finished"
        tools:layout="@layout/fragment_event_finished" >
        <action
            android:id="@+id/action_navigation_finished_to_eventDetailFragment"
            app:destination="@id/navigation_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.dicodingeventapp.ui.detail.EventDetailFragment"
        android:label="@string/title_event_detail"
        tools:layout="@layout/fragment_event_detail" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.dicodingeventapp.ui.favorite.EventFavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_event_favorite" >
        <action
            android:id="@+id/action_eventFavoriteFragment_to_eventDetailFragment"
            app:destination="@id/navigation_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_option"
        android:name="com.example.dicodingeventapp.optionFragment"
        android:label="@string/option"
        tools:layout="@layout/fragment_option" />
</navigation>